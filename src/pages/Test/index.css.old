.cell-title {
  display: flex;
  align-items: flex-start;
  gap: 8px;
  min-width: 0;
}

.cell-title img {
  flex: 0 0 16px;
  width: 16px;
  height: 16px;
}

.cell-title .anticon {
  flex: 0 0 auto;
  margin-left: 12px;
}

.cell-title .ant-typography {
  flex: 1 1 auto;
  margin: 0;
  word-break: break-word;
}

@media (max-width: 768px) {
  .ant-table thead th:nth-child(3),
  .ant-table tbody td:nth-child(3) {
    display: none; /* скрываем колонку "Тип" */
  }
}
